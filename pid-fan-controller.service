[Unit]
Description=PID fan controller
#After=lm_sensors.service
#Requires=lm_sensors.service
After=multi-user.target

[Service]
Type=simple
ExecStartPre=/usr/local/pid-fan-controller/override_auto_fan_control.py 1
ExecStart=/usr/local/pid-fan-controller/main_loop.py
ExecStopPost=/usr/local/pid-fan-controller/override_auto_fan_control.py 0

[Install]
WantedBy=multi-user.target

